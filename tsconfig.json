{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES6",
    "noImplicitAny": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "tests"]
}
